@model IEnumerable<BookVM>

@foreach (var book in Model)
{
    <div class="card border-secondary mb-3 p-2" style="max-width: 20rem;min-width:20rem; max-height:420px">
        <img style="width:100%;max-height:200px" src="@book.Image" class="card-img-top" alt="@book.Name">
        <div class="card-body d-flex flex-column justify-content-between">
            <h5 class="card-title">@book.Name</h5>
            <p class="card-text">
                Genre: @book.Genre
                <br />
                Author: @book.AuthorName
                <br />
                Price: @book.Price
            </p>
            <form asp-controller="Cart" asp-action="AddItem"
                  data-ajax-method="Post"
                  data-ajax="true"
                  data-ajax-success="AddItem">
                <input type="hidden" readonly  value="@book.Id" name="bookId"/>
                <button type="submit" class="btn btn-primary " style="max-width:fit-content">Buy Now</button>
            </form>
        </div>
    </div>
}